<div class="container-fluid row d-flex task">
  <div class="flex-grow-1"><p><%= task.title %></p></div>
  <div class="px-2"><p><%= task.due_date %></p></div>
  <div class="px-2"><p><%= task.due_time %></p></div>
  <div class="px-2"><%= link_to 'Edit', edit_task_path(task) %></div>
  <div class="px-2"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></div>
</div>
