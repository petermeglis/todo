<div class="container-fluid row d-flex task">
  <div class="flex-grow-1"><p><%= task.title %></p></div>
  <div class="px-2"><p class="failure">Deleted: <%= task.deleted_timestamp_to_s %></p></div>
  <div class="px-2"><p>Completed: <%= task.completed_timestamp_to_s %></p></div>
  <div class="px-2"><p><%= task.due_date_to_s %></p></div>
  <div class="px-2"><p><%= task.due_time_to_s %></p></div>
  <div class="px-2"><%= link_to 'Edit', edit_task_path(task) %></div>
</div>
